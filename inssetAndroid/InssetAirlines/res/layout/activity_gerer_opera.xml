<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<TextView
		android:id="@+id/textView1"
		style="@style/titre"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:text="Choix de l&apos;avion en révision"
		android:textSize="45dip"
		tools:context=".GererOperation" />

	<ListView
		android:id="@+id/listAvionRevision"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/textView1"
		android:layout_marginTop="68dp" >
	</ListView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_below="@+id/textView1"
		android:layout_marginTop="18dp" >
		
		<TextView 
			android:id="@+id/TextView02"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:gravity="center_horizontal"
			android:text = "immatriculation"
			style="@style/textBleu"
			/>
		
		<TextView 
			android:id="@+id/TextView03"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:gravity="center_horizontal"
			android:text = "type révision"
			style="@style/textBleu"
			/>
		
		<TextView 
			android:id="@+id/TextView04"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:gravity="center_horizontal"
			android:text = "date révision"
			style="@style/textBleu"
			/>
		
		
	</LinearLayout>

</RelativeLayout>
