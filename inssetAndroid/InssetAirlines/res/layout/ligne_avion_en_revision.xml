<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:background="@drawable/cadre_liste_avion_revision" >
	
	<TextView 
			android:id="@+id/TextImmatri"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal"
			android:text = "immatriculation"
			android:textColor="@color/noir"
			android:textSize="20dp"
			/>
		
		<TextView 
			android:id="@+id/TextTypeRev"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal"
			android:text = "type révision"
			android:textColor="@color/noir"
			android:textSize="20dp"
			/>
		
		<TextView 
			android:id="@+id/TextDateRev"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_weight="30"
			android:paddingTop="5dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal"
			android:text = "date révision"
			android:textColor="@color/noir"
			android:textSize="20dp"
			/>
	

</LinearLayout>